<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e6eeeeee"
    android:minHeight="76dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/item_drag_and_drop_social_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/pillbox"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.example.lol.patients.font.RobotoTextView
                android:id="@+id/medicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textColor="@color/cpb_red_dark"
                android:textSize="24sp"
                app:typeface="robotoLight" />

            <!--<com.example.lol.patients.font.RobotoTextView-->
                <!--android:id="@+id/item_drag_and_drop_social_place"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:paddingLeft="0dp"-->
                <!--android:text="from Las Vegas"-->
                <!--android:textColor="@color/main_color_grey_700"-->
                <!--android:textSize="12sp"-->
                <!--app:typeface="robotoLight" />-->
        </LinearLayout>

        <com.example.lol.patients.font.RobotoTextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="17"
            android:textColor="@color/cpb_red_dark"
            android:textSize="30dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cpb_red_dark" />

</LinearLayout>







