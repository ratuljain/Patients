<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/tests">

        <ImageView
            android:id="@+id/activity_drag_and_drop_shop_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_main_image"
            android:scaleType="centerCrop"
            android:elevation="8dp"
            android:src="@drawable/healthcare" />

    </RelativeLayout>

    <com.example.lol.patients.font.RobotoTextView
        android:id="@+id/list_item_google_cards_travel_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/transparent_button_selector"
        android:padding="8dp"
        android:text="Here's your prescription medicines."
        android:textColor="@color/cpb_red_dark"
        android:textSize="14sp"
        app:typeface="robotoMedium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_red_900" />

    <com.nhaarman.listviewanimations.itemmanipulation.DynamicListView
        android:id="@+id/activity_list_view_drag_and_drop_dynamic_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>